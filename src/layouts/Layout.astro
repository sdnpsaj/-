---
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
    <title>{title}</title>
    <style>
      body {
        background-color: black;
        color: white;
        width: 800px;
        margin: 0 auto;
      }
      h1 {
        font-size: 3em;
        margin: 1em 0;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <Navigation />
    <slot />
    <Footer />
  </body>
</html>
